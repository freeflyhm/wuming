'use strict';

var 
  PORT = 80,
  express  = require('express'),
  app      = express(),
  server   = require('http').Server(app);

app.use(express.static(path.join(__dirname, 'public')));

app.get('/', function (req, res) {
  res.sendFile('index.html');
});

server.listen(PORT);
console.log('Running on http://localhost:' + PORT);